#rsvp
  .white_section
    %h3
      RSVP
    #rsvp_form
      = form_for(@rsvp, remote: true) do |f|
        .field
          = f.text_field :name, placeholder: 'Your name'
        .field
          = f.text_field :guests, placeholder: 'Any guests?'
        .field#attending
          %label
            %span.label
              Attending
            = f.check_box :attending, class: 'ios-switch' 
            %span.switch
    
        .field
          = f.text_area :message, placeholder: 'Any message for us?'
  
        = f.submit 'RSVP'
